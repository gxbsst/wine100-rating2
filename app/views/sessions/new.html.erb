<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
<%= render '/refinery/head' %>
<style type="text/css">
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .new_user, .edit_user {
        max-width: 400px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }
    .new_user .form-signin-heading, .edit_user .form-signin-heading
     {
        margin-bottom: 10px;
    }
    .new_user input[type="text"], .edit_user input[type="text"],
    .new_user input[type="password"], .edit_user input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
    }

</style>
<body>
<%= render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>
<div class="container">

  <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
        <a class="close" data-dismiss="alert">×</a>
        <%= msg %>
      </div>
  <% end %>

  <%= form_for @user, :url => sessions_path, :class => 'form-signin' do |f| %>
      <h2 class="form-signin-heading">请登录</h2>
      <%= f.text_field :name, :class => 'input-block-level', :placeholder => '用户名' %>
      <%= f.password_field :password, :class => 'input-block-level', :placeholder => '密码' %>
      <button class="btn btn-large btn-primary" type="submit">登录</button>
  <% end %>

</div> <!-- /container -->
</body>
</html>
