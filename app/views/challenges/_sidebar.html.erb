<div class="span3">
  <div class="well sidebar-nav sidebar-nav-fixed">
    <ul class="nav nav-list">
      <% if current_user.leader? %>
          <li class="nav-header">Status</li>
          <li>
            <%= link_to 'Progress', '/wine_groups/progress' %>
          </li>
      <% end %>
      <% if current_user.e_group? %>
          <li class="nav-header">Status</li>
          <li>
            <%= link_to 'Finished Flights', final_awards_path() %>
          </li>
          <li>
            <%= link_to 'Progress', '/wine_groups/progress' %>
          </li>
      <% end %>
      <li class="nav-header">酒组/Flights</li>
      <% @wine_groups.each do |wine_group| %>
          <% if wine_group.id ==  params[:id].to_i %>
              <li class="active">
          <% else %>
              <li>
          <% end %>
          <%= link_to wine_group.name, challenge_path(wine_group) %>
      <% end %>
    </ul>
  </div><!--/.well -->
</div><!--/span-->
