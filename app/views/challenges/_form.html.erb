<%= form_for item.test_paper(current_user), :url => c_path(item.test_paper(current_user)),
             :html => {:class => "form"}, :remote => true, :validate => true do |f|  %>
    <%= f.hidden_field :wine_id %>
    <%= f.hidden_field :group_id %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :wine_group_id %>
    <%= f.hidden_field :user_group_id, :value => 0 %>
    <%= f.hidden_field :group_item_id, :value => item.id %>
    <table class="table">
      <tr>
        <td colspan=2 >
          <div class="control-group">

            <%= f.label :score, '* Score 评分:', :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :score, :placeholder => 'Score 评分' %>
              <span class="help-inline">Pls enter score of the wine 请输入这支酒的分数</span>
            </div>
          </div>
        </td>
      </tr>
      <tr>
        <td width="260">
          <div class="control-group">
            <%= f.label :drink_begin_at, 'Drink Window 试饮年限:', :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :drink_begin_at, :placeholder => 'e.g.2013', :class => "required", :length => "4" %>
              &nbsp;
              &nbsp;
               To
              <br />
              <span class="help-inline">请输入试饮年限, 如:2018</span>
            </div>
          </div>
        </td>
        <td>
          <div class="control-group">
            <%#= raw f.label :drink_end_at, ' ', :class => 'control-label' %>
            <label class="control-label" for="test_paper_drink_end_at">&nbsp;</label>
            <div class="controls">
              <%= f.text_field :drink_end_at, :placeholder => 'e.g.2099', :class => "required", :length => "4" %>
              <br />
              <span class="help-inline">请输入试饮年限, 如:2020</span>
            </div>
          </div>
        </td>

      </tr>
      <tr>
        <td colspan=2>
          <div class="control-group">
            <%= f.label :note, 'Tasting Note品酒辞:' %>
            <div class="controls">
              <%= f.text_area :note, :size => '100x7' %>
            </div>
          </div>
        </td>
      </tr>
    </table>
    <%= f.submit 'Save', :class => 'btn  btn-primary', 'data-loading-text' => "Saving..." %>
    <button type="reset" class="btn">Cancel</button>
<% end %>
