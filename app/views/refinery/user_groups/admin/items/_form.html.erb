<%= form_for [refinery, :user_groups_admin, @item] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @item,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :refinery_member_id -%>
    <%= f.number_field :refinery_member_id -%>
  </div>

  <div class='field'>
    <%= f.label :refinery_user_group_id -%>
    <%= f.number_field :refinery_user_group_id -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.items.admin.items.item'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete') -%>
<% end -%>
