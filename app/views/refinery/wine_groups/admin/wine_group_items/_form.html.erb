<%= form_for [refinery, :wine_groups_admin, @wine_group_item] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @wine_group_item,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :wine_id -%>
    <%= f.number_field :wine_id -%>
  </div>

  <div class='field'>
    <%= f.label :group_id -%>
    <%= f.number_field :group_id -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.wine_group_items.admin.wine_group_items.wine_group_item'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete') -%>
<% end -%>
