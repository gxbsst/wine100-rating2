<% content_for :body_content_title do %>
  <%= @wine_group.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @wine_group.name %>
    </p>
  </section>
  <section>
    <h1>Judge</h1>
    <p>
      <%=raw @wine_group.judge_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="wine_groups">
      <% @wine_groups.each do |wine_group| %>
        <li>
          <%= link_to wine_group.name, refinery.wine_groups_wine_group_path(wine_group) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
