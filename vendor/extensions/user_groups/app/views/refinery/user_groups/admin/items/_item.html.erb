<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(item) -%>">
  <span class='title'>
    <%= item. %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.user_groups_item_path(item),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_user_groups_admin_item_path(item),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.user_groups_admin_item_path(item),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => item.),
        :method => :delete %>
  </span>
</li>
