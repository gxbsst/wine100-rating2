<%= form_for [refinery, :user_groups_admin, @user_group] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @user_group,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.user_groups.admin.user_groups.user_group'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @user_group.name) -%>
<% end -%>
