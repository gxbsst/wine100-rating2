<% content_for :body_content_title do %>
  <%= @user_group.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @user_group.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="user_groups">
      <% @user_groups.each do |user_group| %>
        <li>
          <%= link_to user_group.name, refinery.user_groups_user_group_path(user_group) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
