<%= form_for [refinery, :members_admin, @member] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @member,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :password_digest -%>
    <%= f.text_field :password_digest -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>

  <div class='field'>
    <%= f.label :password_cleartext -%>
    <%= f.text_field :password_cleartext -%>
  </div>

  <div class='field'>
    <%= f.label :builder_id -%>
    <%= f.number_field :builder_id -%>
  </div>

  <div class='field'>
    <%= f.label :last_sign_in_at -%>
    <%= f.datetime_select :last_sign_in_at -%>
  </div>

  <div class='field'>
    <%= f.label :remember_created_at -%>
    <%= f.datetime_select :remember_created_at -%>
  </div>

  <div class='field'>
    <%= f.label :current_sign_in_ip -%>
    <%= f.text_field :current_sign_in_ip -%>
  </div>

  <div class='field'>
    <%= f.label :last_sign_in_ip -%>
    <%= f.text_field :last_sign_in_ip -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.members.admin.members.member'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @member.name) -%>
<% end -%>
