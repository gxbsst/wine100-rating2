<% content_for :body_content_title do %>
  <%= @wine.name_zh %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name Zh</h1>
    <p>
      <%=raw @wine.name_zh %>
    </p>
  </section>
  <section>
    <h1>Name En</h1>
    <p>
      <%=raw @wine.name_en %>
    </p>
  </section>
  <section>
    <h1>Region En</h1>
    <p>
      <%=raw @wine.region_en %>
    </p>
  </section>
  <section>
    <h1>Region Zh</h1>
    <p>
      <%=raw @wine.region_zh %>
    </p>
  </section>
  <section>
    <h1>Vingate</h1>
    <p>
      <%=raw @wine.vingate %>
    </p>
  </section>
  <section>
    <h1>Sugar</h1>
    <p>
      <%=raw @wine.sugar %>
    </p>
  </section>
  <section>
    <h1>Grape Vairety</h1>
    <p>
      <%=raw @wine.grape_vairety %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @wine.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="wines">
      <% @wines.each do |wine| %>
        <li>
          <%= link_to wine.name_zh, refinery.wines_wine_path(wine) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
